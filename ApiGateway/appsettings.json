{
  "Jwt": {
    "PublicKeyPath": "/app/keys/public.key",
    "Issuer": "DineroBank.AuthService",
    "Audience": "DineroBank"
  },
  "ReverseProxy": {
    "Routes": {

      "RouteId": {
        "identity_register",
        "ClusterId": "identity_cluster",
        "Match": { "Path": "/auth/register" },
        "AuthorizationPolicy": "Anonymous"
        },
      "transaction_route": {
        "ClusterId": "transaction_cluster",
        "Match": { "Path": "/api/transactions/{**catch-all}" },
        "AuthorizationPolicy": "Default"
      },
      "account_route": {
        "ClusterId": "account_cluster",
        "Match": { "Path": "/api/accounts/{**catch-all}" },
        "AuthorizationPolicy": "Default"
      }
      },
      "Clusters": {
        "transaction_cluster": {
          "Destinations": { "t1": { "Address": "http://transactionservice:5002/" } }
        },
        "account_cluster": {
          "Destinations": { "a1": { "Address": "http://accountservice:5001/" } }
        }
      }
    },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
